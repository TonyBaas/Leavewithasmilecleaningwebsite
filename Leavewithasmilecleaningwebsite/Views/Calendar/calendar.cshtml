@{
    ViewData["Title"] = "Calendar";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
</head>
<body>
    <h1>Calendar</h1>
    <h2>Please select a date for when you would like a cleaning.</h2>
    <!-- Input for First Name -->
    <input type="text" id="FName" />
    <!-- Input for Last Name -->
    <input type="text" id="LName" />
    <!-- Input for Datepicker -->
    <input type="text" id="datepicker">
    <!-- Input for Comments -->
    <textarea id="Comments"></textarea>

    <script>
        // Initialize the datepicker
        $(function () {
            $("#datepicker").datepicker({
                minDate: 0, // set minDate to 0 for today's date
                maxDate: '+3M', // set maxDate to +3M for three months from today
                dateFormat: 'yy-mm-dd' // set the date format
            });
        });
    </script>

    <!-- Submit Button -->
    <input type="submit" id="Submit">
    <p>Please be advised that the date you choose may or may not work for the cleaners.</p>

    <img src="~/Images/pvpYes.jpg" alt="Test">

</body>
</html>


